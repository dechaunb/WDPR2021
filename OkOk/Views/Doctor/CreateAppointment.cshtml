@model OkOk.Models.Treatment
@{
    ViewData["Title"] = "Afspraak maken";
    Layout = "_DoctorLayout";
}

<header>
    <div class="m-0 p-0 row gx-xl-3 gx-2">
        <div class="col-12">
            <h1 class="text-dark fs-3">
                @{
                    ApplicationUser applicationUser = await UserManager.GetUserAsync(User);
                    string lastName = applicationUser.LastName;
                }
                Welkom, Dr @lastName
            </h1>
            <h2 class="fs-6 fw-normal text-muted">Bekijk hier al je afspraken of maak een nieuwe.</h2>
        </div>
    </div>
</header>

<div class="container-fluid py-2 m-0 p-0 text-dark">
    <h1 class="visually-hidden">Acties Uitvoeren</h1>
    <div class="row m-0 p-0 g-xl-3 g-2 d-flex align-items-start align-content-start">
        <div class="col-12 mt-0">
            <div class="row m-0 p-0">
                <div class="col-12 py-3 px-0 d-flex justify-content-between">
                    <div class="d-flex align-items-end align-content-end m-0 p-0">
                        <h2 class="fs-4 m-0">Maak een nieuwe afspraak</h2>
                    </div>
                    <div class="d-flex align-items-end align-content-end m-0 p-0"></div>
                </div>

                <div class="col-12 okok-rounded bg-opac p-3 px-0">
                    <div class="row m-0 p-2 px-3 justify-content-center">
                        <div class="col-md-6 m-0 p-0">
                        <form asp-action="CreateAppointment" method="post" class="row g-2 m-0 p-0">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="DateTime" class="form-control" />
                                    <label asp-for="DateTime" class="control-label"></label>
                                    <span asp-validation-for="DateTime" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="Description" class="form-control" />
                                    <label asp-for="Description" class="control-label"></label>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <select asp-for="ClientId" class ="form-control" asp-items="ViewBag.ClientId"></select>
                                    <label asp-for="ClientId" class="control-label"></label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                <input type="submit" value="Maak afspraak" class="btn btn-primary" />
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
